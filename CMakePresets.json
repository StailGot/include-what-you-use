{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "version=14.33",
        "strategy": "external"
      }
    },
    {
      "name": "Debug-x64",
      "displayName": "Debug-x64",
      "inherits": [ "default" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "LLVM_DIR": "${sourceDir}/../llvm-project/llvm/out/Debug-x64/lib/cmake",
        "Clang_DIR": "${sourceDir}/../llvm-project/llvm/out/Debug-x64/lib/cmake"
      }
    },
    {
      "name": "Release-x64",
      "displayName": "Release-x64",
      "inherits": [ "default" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "LLVM_USE_CRT_RELEASE": "MT",
        "CMAKE_C_FLAGS": "/GS-",
        "CMAKE_CXX_FLAGS": "/GS-",
        "LLVM_DIR": "${sourceDir}/../llvm-project/llvm/out/Release-x64/lib/cmake",
        "Clang_DIR": "${sourceDir}/../llvm-project/llvm/out/Release-x64/lib/cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Debug-x64",
      "configurePreset": "Debug-x64"
    },
    {
      "name": "Release-x64",
      "configurePreset": "Release-x64"
    }
  ]
}
